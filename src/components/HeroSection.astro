<!-- Header -->
<header class="bg-neutral-200 py-6 px-6 md:px-12 shadow-md">
    <div class="container mx-auto flex items-center justify-between">
        <h1 class="text-3xl font-playfair text-gray-900">Tialed</h1>
        <nav class="hidden md:flex space-x-8">
            <a href="#tienda" class="text-lg text-gray-700 hover:text-black"
                >Tienda</a
            >
            <a href="#acerca" class="text-lg text-gray-700 hover:text-black"
                >Acerca de</a
            >
            <a href="#contacto" class="text-lg text-gray-700 hover:text-black"
                >Contacto</a
            >
            <a href="#carrito" class="text-lg text-gray-700 hover:text-black"
                >Carrito</a
            >
        </nav>
        <!-- Mobile Menu Button -->
        <button class="md:hidden text-gray-700">
            <i class="fas fa-bars"></i>
        </button>
    </div>
</header>

<!-- Sección Hero -->
<section class="bg-neutral-200 py-16 px-6 md:px-12">
    <div class="container mx-auto flex flex-col md:flex-row items-center gap-20">
        <!-- Texto de la sección -->
        <div class="w-full md:w-1/2 text-center md:text-left mb-8 md:mb-0">
            <h2 class="text-7xl text-gray-900 mb-4 font-playfair">
                Moda Elegante y Sofisticada para Cada Estilo
            </h2>
            <p class="text-gray-700 mb-6 font-normal text-lg max-w-[75%]">
                Descubre lo último en tendencias de moda con nuestra selección
                exclusiva. Desde estilos clásicos hasta vanguardistas, encuentra
                la inspiración perfecta para tu próximo atuendo con la guía
                experta de nuestros diseñadores.
            </p>
            <a
                href="#leer-mas"
                class="inline-block bg-black text-center text-white my-8 py-5 px-6 rounded-full font-extralight hover:bg-gray-800 transition duration-300 min-w-80"
            >
                Leer más
            </a>
        </div>

        <!-- Imagen de la sección -->
        <div class="w-full md:w-1/2">
            <img
                src="/src/assets/ropa.jpeg"
                alt="Diseño de ropa Tialed"
                class="w-full h-4/12 rounded-lg shadow-lg object-cover"
            />
        </div>
    </div>
</section>
